<!DOCTYPE html>

<html>

  <head>

    <title>The Best Blog</title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
    
  

    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
   

  </head>

  <body>


    <div id = "pagecontainer">

      <header>
        <div id="site_title">
          <h1> HoopsTalk </h1>
          <h4 id="title_description">All Basketball, All The Time... </h4>
            <div id="flashalert">

              <% if flash[:alert] %>
               <%= flash[:alert] %>
              <% end %>
          
            </div>
        </div>  

        <nav>
          <div id="unordered_list_wrapper">
            <ul class="navigation">

              <% if current_user %>
                 <li> <%= link_to "Feeds", posts_path %> </li>
                 <li> <%= link_to "Make Post", new_post_path %></li>
                 <li> <%= link_to "My Profile", user_path(current_user) %></li>
                 <li> <%= link_to "Users", users_path %></li>
                 <li> <%= link_to "Sign Out", '/logout', method: :delete %> </li>

              <% else %>
                 <li> <%= link_to "Feeds", posts_path %> </li>
                 <li> <%= link_to "Sign Up", new_user_path %> </li>
                
              <% end %>
            </ul>

          </div>
        </nav>

      </header>
     
      <%= yield %>

      <footer>
        We Love Basketball
      </footer>

    </div> <!-- end of pagecontainer -->

  </body>

</html>
